pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'Sohail', url: 'https://github.com/RZKJr/rzhomelab'
            }
        }
        stage('Terraform init') {
            steps {
                
                sh 'terraform init'
            }
        }
        stage('Terrform apply') {
            steps {
                withCredentials([azureServicePrincipal('JenkinsSPN')]) {
                    sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID'
                }
                sh 'terraform destroy --auto-approve'

            }
        }
    }
}
